<%= stylesheet_link_tag "playlist" %>
 
<script language="javascript">
	function set_current_track( track )
	{
	window.location = "/set_track/" + track
	}
	

</script>
 
<div style="position:absolute; top:0px; left:0px; width:800px; height:600px; background-image:url('/images/background.png'); overflow:hidden">

<div class="playlist_box">
	<div class="playlist_title_container">
		<strong>Playlist Title</strong>
	</div>
	
	<div class="playlist_container">
		<% track_box_top = 0 %>
		<% song_idx = 0 %>
		<% @songs.each do |song| %>
			<% if session[:current_track] == song_idx %>
				<%= "<div class=\"track_box_active\" style=\"top:#{track_box_top}px;\" onclick=\"javascript:set_current_track(#{song_idx})\">" %>
			<% else %>
				<%= "<div class=\"track_box\" style=\"top:#{track_box_top}px;\" onclick=\"javascript:set_current_track(#{song_idx})\">" %>
			<% end %>
				<div class="track_image">
					<img src="images/albumart.jpg">
				</div>
				<div class="track_text_box"	>
					<strong><%= "#{song.title}" %> - <%= "#{song.artist}" %> - <%= "#{song.album}" %></strong><br>
					Submitter Name
				</div>
			</div>
		<% track_box_top += 50 %>
		<% song_idx += 1 %>
		<% end %>
		
	</div>
	
	<div class="playlist_bottom_container">
      <% if !@current_track_filename.empty? %>
	    <object classid="clsid:02BF25D5-8C17-4B23-BC80-D3488ABDDC6B" codebase="http://www.apple.com/qtactivex/qtplugin.cab">
	      <%= "<embed id=\"music_player\" src=\"#{@current_track_filename}\" width=\"400\" height=\"20\" autoplay=\"true\" controller=\"true\" pluginspage=\"http://www.apple.com/quicktime/download/\"></embed>" %>
        </object>
	  <% end %>
	</div>
</div>


      <% form_tag '/upload/uploadFile', :multipart => true do %> 
        <%= file_field 'upload', 'datafile' %><%= submit_tag "Upload" %>
      <% end %>	


</div>
